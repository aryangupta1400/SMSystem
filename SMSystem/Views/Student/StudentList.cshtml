        @Html.RadioButton("searchBy", "Gender")
        <b> Gender    </b>

        @Html.RadioButton("searchBy", "CourseId")
        <b> Course    </b>

        @Html.RadioButton("searchBy", "StatusCode")
        <b> Status  </b><br />

        @Html.TextBox("search")
        <input type="submit" value=" Search" />
    }
</p>

