@model IEnumerable<SMSystem.Models.Student>

@{
    ViewBag.Title = "StudentList";
}

@if (@ViewBag.Message != null)
{
    <div style="border: 1px solid red; margin-bottom:10px;">
        @ViewBag.Message
    </div>
}

<h2>Student List</h2>

@if (@ViewBag.Message != null)
{
