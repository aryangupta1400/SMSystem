@model IEnumerable<SMSystem.Models.Status>

@{
    ViewBag.Title = "StatusList";
}

<h2>Status List</h2>

<p>
    @Html.ActionLink("Add New Status", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StatusCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StatusCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StatusCode }) |
            @Html.ActionLink("Details", "Details", new { id=item.StatusCode }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StatusCode })
        </td>
    </tr>
}

</table>
